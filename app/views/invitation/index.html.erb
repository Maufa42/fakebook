<%# Name: <%=u.name%> 
<%# email: <%=u.email%><br> 
<div class = "container position-absolute top-50 start-50 translate-middle">
<div class= "sample">
<h1>My Friends</h1>
  <%@friends.each do |fr|%>
  Name:<%=fr.user.name%><br>
  <%end%>
<hr>
<hr>
</div>

<div class = "sample">
<h1>Friend Request</h1>
<% @pending.each do |p| %>
<%= p.user.id%>
Name: <%=p.user.email%>
<%= button_to "Accept",accept_invite_path, params: {id: p.id,confirmed: true}, method: :post%> 
<%end%>
<hr>
<hr>
</div>
<div class = "sample">
<h1>All User</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">User-Id</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%i = 1%>
    <% @users.each do |u| %>
    <tr>
      <th scope="row"><%= i%></th>
      <td><%=link_to u.name,user_path(u)%></td>
      <td><%=u.email%></td>
      <%if Invitation.reacted?(current_user[:id],u.id)%>
      <td><%=link_to "Cancel Friend Request"%></td>
      <%else%>
      <td><%= u.id%></td>
      <td><%=link_to "Add Friend",invitation_index_path(friends_id: u.id), method: :post%></td>
      <%end%>
    <%i+=1%>
    </tr>
   
    <%end%>
  </tbody>
</table>
</div>
</div>
<style>

.sample {
 position: relative;
 top: 110px;
}

</style>